  <input type="text" name="song[note_content][]" id="song_notes_3"> -->

  <%= f.fields_for :notes do |ff| %>
	<%= ff.label :content, :Note %>
	<%= ff.text_field :content %>
	<br>
  <% end %>
  

  <br>
  <%= f.submit %>
<% end %>


