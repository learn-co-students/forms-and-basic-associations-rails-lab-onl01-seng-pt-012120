<h1>Create a Song</h1>

<%= form_for @song  do |f| %>

  <%= f.text_field :artist_name, list: "artist_names_autocomplete"%>
  <datalist id="artist_names_autocomplete">
    <% Artist.all.each do |artist|%>
    <option value="<%= artist.name %>">
  <% end %>
  </datalist>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br>
  
  <%= f.text_area :notes, name:"song[song_notes][]", id: "song_notes_attributes_0_content" %>
  <%= f.text_area :notes, name:"song[song_notes][]", id: "song_notes_attributes_1_content" %>

  
  <%= f.submit %>
<% end %>


