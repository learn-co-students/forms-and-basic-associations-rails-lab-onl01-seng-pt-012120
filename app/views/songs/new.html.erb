<h1>Create a Song</h1>

<%# form_for @song do |f| %>
<%= form_for setup_song(@song)  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br>
  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br>

<!--   <input type="text" name="song[note_content][]" id="song_notes_1">
